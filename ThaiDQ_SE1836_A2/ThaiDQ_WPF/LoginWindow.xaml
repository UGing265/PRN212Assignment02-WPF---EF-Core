<Window x:Class="ThaiDQ_WPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThaiDQ_WPF"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">


    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="Foreground" Value="#FF2D3436"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Background" Value="#FFFFFF"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="#FFE17055"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
        </Style>

    </Window.Resources>


    <StackPanel>
        <Label Content="Email"/>
        <TextBox x:Name="txtEmail" Text="admin@FUMiniHotelSystem.com"/>
        <Label Content="Password"/>
        <PasswordBox x:Name="txtPassword" Password="@@abc123@@"/>
        <Button x:Name="btnLogin" Content="Login" IsDefault="True" Click="btnLogin_Click"/>
    </StackPanel>
</Window>
