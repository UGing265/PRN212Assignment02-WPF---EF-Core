<Window x:Class="ThaiDQ_WPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThaiDQ_WPF"
        mc:Ignorable="d"
        Title="FU Mini Hotel - Login" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid>
        <!-- Background gradient giống MainWindow -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1E293B" Offset="0"/>
                <GradientStop Color="#334155" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Main content centered -->
        <Border Background="White" 
                CornerRadius="20" 
                MaxWidth="450" 
                MaxHeight="500"
                Padding="40"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="30" ShadowDepth="0"/>
            </Border.Effect>

            <StackPanel>
                <!-- Logo & Title -->
                <TextBlock Text="🏨" 
                           FontSize="48" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,10"/>
                <TextBlock Text="FU Mini Hotel" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           Foreground="#1E293B"
                           Margin="0,0,0,5"/>
                <TextBlock Text="Management System" 
                           FontSize="14" 
                           HorizontalAlignment="Center"
                           Foreground="#64748B"
                           Margin="0,0,0,40"/>

                <!-- Email -->
                <TextBlock Text="Email Address" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Foreground="#334155"
                           Margin="0,0,0,8"/>
                <TextBox x:Name="txtEmail" 
                         Text="admin@FUMiniHotelSystem.com"
                         Height="40"
                         Padding="12,10"
                         FontSize="14"
                         Background="#F8FAFC"
                         BorderBrush="#E2E8F0"
                         BorderThickness="1"
                         Margin="0,0,0,20"/>

                <!-- Password -->
                <TextBlock Text="Password" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Foreground="#334155"
                           Margin="0,0,0,8"/>
                <PasswordBox x:Name="txtPassword" 
                             Password="@@abc123@@"
                             Height="40"
                             Padding="12,10"
                             FontSize="14"
                             Background="#F8FAFC"
                             BorderBrush="#E2E8F0"
                             BorderThickness="1"
                             Margin="0,0,0,30"/>

                <!-- Login Button -->
                <Button x:Name="btnLogin" 
                        Content="Login" 
                        Height="45"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Background="#1E293B"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        IsDefault="True"
                        Click="btnLogin_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#1E293B"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#334155"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Footer -->
                <TextBlock Text="Default Admin: admin@FUMiniHotelSystem.com / @@abc123@@" 
                           FontSize="11" 
                           HorizontalAlignment="Center"
                           Foreground="#94A3B8"
                           Margin="0,20,0,0"
                           TextWrapping="Wrap"
                           TextAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
