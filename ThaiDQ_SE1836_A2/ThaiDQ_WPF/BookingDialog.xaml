<Window x:Class="ThaiDQ_WPF.BookingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThaiDQ_WPF"
        mc:Ignorable="d"
        Title="Booking Reservation" Height="500" Width="500" 
        MinHeight="400" MinWidth="450" ResizeMode="CanResize"
        WindowStartupLocation="CenterOwner">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#F0F9FF" Offset="0"/>
            <GradientStop Color="#E0F2FE" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">
            <TextBlock Text="ðŸ“ Booking Information" FontSize="20" FontWeight="Bold" Foreground="#1E293B" Margin="0,0,0,20"/>

            <!-- Customer -->
            <TextBlock Text="Customer:" FontWeight="SemiBold" Foreground="#475569" Margin="0,0,0,5"/>
            <ComboBox x:Name="cbCustomer" Height="35" Margin="0,0,0,15" 
                      DisplayMemberPath="CustomerFullName" SelectedValuePath="CustomerId"/>

            <!-- Booking Date -->
            <TextBlock Text="Booking Date (dd/MM/yyyy):" FontWeight="SemiBold" Foreground="#475569" Margin="0,0,0,5"/>
            <TextBox x:Name="txtBookingDate" Height="35" Padding="10,8" Margin="0,0,0,10"/>

            <!-- Total Price -->
            <TextBlock Text="Total Price:" FontWeight="SemiBold" Foreground="#475569" Margin="0,0,0,5"/>
            <TextBox x:Name="txtTotalPrice" Height="35" Padding="10,8" Margin="0,0,0,10"/>

            <!-- Booking Status -->
            <TextBlock Text="Booking Status:" FontWeight="SemiBold" Foreground="#475569" Margin="0,0,0,5"/>
            <ComboBox x:Name="cbStatus" Height="35" Margin="0,0,0,15">
                <ComboBoxItem Content="Pending" Tag="0"/>
                <ComboBoxItem Content="Confirmed" Tag="1"/>
                <ComboBoxItem Content="Cancelled" Tag="2"/>
            </ComboBox>

            <!-- Room -->
            <TextBlock Text="Room:" FontWeight="SemiBold" Foreground="#475569" Margin="0,0,0,5"/>
            <ComboBox x:Name="cbRoom" Height="35" Margin="0,0,0,15">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding RoomNumber}"/>
                            <TextBlock Text=" - " Margin="5,0"/>
                            <TextBlock Text="{Binding RoomType.RoomTypeName}"/>
                            <TextBlock Text=" - " Margin="5,0"/>
                            <TextBlock Text="{Binding RoomPricePerDay, StringFormat={}{0:N0} VND}"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <!-- Start Date -->
            <TextBlock Text="Start Date (dd/MM/yyyy):" FontWeight="SemiBold" Foreground="#475569" Margin="0,0,0,5"/>
            <TextBox x:Name="txtStartDate" Height="35" Padding="10,8" Margin="0,0,0,10"/>

            <!-- End Date -->
            <TextBlock Text="End Date (dd/MM/yyyy):" FontWeight="SemiBold" Foreground="#475569" Margin="0,0,0,5"/>
            <TextBox x:Name="txtEndDate" Height="35" Padding="10,8" Margin="0,0,0,10"/>

            <!-- Actual Price -->
            <TextBlock Text="Actual Price:" FontWeight="SemiBold" Foreground="#475569" Margin="0,0,0,5"/>
            <TextBox x:Name="txtActualPrice" Height="35" Padding="10,8" Margin="0,0,0,15"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button x:Name="btnCreate" Content="Create" Width="90" Height="32" Margin="0,0,5,0"
                        Background="#10B981" Foreground="White" BorderThickness="0"
                        Click="btnCreate_Click"/>
                <Button x:Name="btnUpdate" Content="Update" Width="90" Height="32" Margin="0,0,5,0"
                        Background="#3B82F6" Foreground="White" BorderThickness="0"
                        Click="btnUpdate_Click"/>
                <Button x:Name="btnCancel" Content="Cancel" Width="90" Height="32"
                        Background="#6B7280" Foreground="White" BorderThickness="0"
                        Click="btnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
