<Window x:Class="ThaiDQ_WPF.BookingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThaiDQ_WPF"
        mc:Ignorable="d"
        Title="Booking Reservation" Height="520" Width="450" MinHeight="400" MinWidth="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <StackPanel Margin="15">
        <!-- Customer -->
        <TextBlock Text="Customer:"/>
        <ComboBox x:Name="cbCustomer" Height="28" Margin="0,0,0,10" 
                  DisplayMemberPath="CustomerFullName" SelectedValuePath="CustomerId"/>

        <!-- Booking Date -->
        <TextBlock Text="Booking Date (dd/MM/yyyy):"/>
        <TextBox x:Name="txtBookingDate" Height="28" Padding="4" Margin="0,0,0,10"/>

        <!-- Total Price -->
        <TextBlock Text="Total Price:"/>
        <TextBox x:Name="txtTotalPrice" Height="28" Padding="4" Margin="0,0,0,10"/>

        <!-- Booking Status -->
        <TextBlock Text="Booking Status:"/>
        <ComboBox x:Name="cbStatus" Height="28" Margin="0,0,0,10">
            <ComboBoxItem Content="Pending" Tag="0"/>
            <ComboBoxItem Content="Confirmed" Tag="1"/>
            <ComboBoxItem Content="Cancelled" Tag="2"/>
        </ComboBox>

        <!-- Room -->
        <TextBlock Text="Room:"/>
        <ComboBox x:Name="cbRoom" Height="28" Margin="0,0,0,10">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding RoomNumber}"/>
                        <TextBlock Text=" - " Margin="5,0"/>
                        <TextBlock Text="{Binding RoomType.RoomTypeName}"/>
                        <TextBlock Text=" - " Margin="5,0"/>
                        <TextBlock Text="{Binding RoomPricePerDay, StringFormat={}{0:N0} VND}"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <!-- Start Date -->
        <TextBlock Text="Start Date (dd/MM/yyyy):"/>
        <TextBox x:Name="txtStartDate" Height="28" Padding="4" Margin="0,0,0,10"/>

        <!-- End Date -->
        <TextBlock Text="End Date (dd/MM/yyyy):"/>
        <TextBox x:Name="txtEndDate" Height="28" Padding="4" Margin="0,0,0,10"/>

        <!-- Actual Price -->
        <TextBlock Text="Actual Price:"/>
        <TextBox x:Name="txtActualPrice" Height="28" Padding="4" Margin="0,0,0,15"/>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnCreate" Content="Create" Width="90" Height="32" Margin="0,0,5,0"
                    Background="#10B981" Foreground="White" Click="btnCreate_Click" Cursor="Hand"/>
            <Button x:Name="btnUpdate" Content="Update" Width="90" Height="32" Margin="0,0,5,0"
                    Background="#3B82F6" Foreground="White" Click="btnUpdate_Click" Cursor="Hand"/>
            <Button x:Name="btnCancel" Content="Cancel" Width="90" Height="32"
                    Background="#6B7280" Foreground="White" Click="btnCancel_Click" Cursor="Hand"/>
        </StackPanel>
    </StackPanel>
</Window>
