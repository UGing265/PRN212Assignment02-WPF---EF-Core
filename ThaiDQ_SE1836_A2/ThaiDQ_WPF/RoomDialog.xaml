<Window x:Class="ThaiDQ_WPF.RoomDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Room Information" Height="450" Width="500"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Room Number -->
        <TextBlock Grid.Row="0" Text="Room Number:" Margin="0,0,0,5"/>
        <TextBox x:Name="txtRoomNumber" Grid.Row="0" Height="30" Margin="0,25,0,10" Padding="5"/>

        <!-- Room Type -->
        <TextBlock Grid.Row="1" Text="Room Type:" Margin="0,0,0,5"/>
        <ComboBox x:Name="cbRoomType" Grid.Row="1" Height="30" Margin="0,25,0,10"
                  DisplayMemberPath="RoomTypeName" SelectedValuePath="RoomTypeId"/>

        <!-- Max Capacity -->
        <TextBlock Grid.Row="2" Text="Max Capacity:" Margin="0,0,0,5"/>
        <TextBox x:Name="txtCapacity" Grid.Row="2" Height="30" Margin="0,25,0,10" Padding="5"/>

        <!-- Price Per Day -->
        <TextBlock Grid.Row="3" Text="Price Per Day:" Margin="0,0,0,5"/>
        <TextBox x:Name="txtPrice" Grid.Row="3" Height="30" Margin="0,25,0,10" Padding="5"/>

        <!-- Status -->
        <TextBlock Grid.Row="4" Text="Status:" Margin="0,0,0,5"/>
        <ComboBox x:Name="cbStatus" Grid.Row="4" Height="30" Margin="0,25,0,10">
            <ComboBoxItem Content="Active" Tag="1"/>
            <ComboBoxItem Content="Inactive" Tag="0"/>
        </ComboBox>

        <!-- Description -->
        <TextBlock Grid.Row="5" Text="Description:" Margin="0,0,0,5"/>
        <TextBox x:Name="txtDescription" Grid.Row="5" Height="30" Margin="0,25,0,10" Padding="5"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="btnCreate" Content="Create" Width="90" Height="32" Margin="0,0,5,0"
                    Background="#10B981" Foreground="White" Click="btnCreate_Click" Cursor="Hand"/>
            <Button x:Name="btnUpdate" Content="Update" Width="90" Height="32" Margin="0,0,5,0"
                    Background="#3B82F6" Foreground="White" Click="btnUpdate_Click" Cursor="Hand"/>
            <Button x:Name="btnCancel" Content="Cancel" Width="90" Height="32"
                    Background="#6B7280" Foreground="White" Click="btnCancel_Click" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
