<Window x:Class="ThaiDQ_WPF.CustomerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customer Information" Height="420" Width="450" MinHeight="350" MinWidth="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
        <StackPanel Margin="15">
            <!-- Full Name -->
            <TextBlock Text="Full Name:"/>
            <TextBox x:Name="txtName" Height="28" Padding="4" Margin="0,0,0,10"/>

            <!-- Email -->
            <TextBlock Text="Email:"/>
            <TextBox x:Name="txtEmail" Height="28" Padding="4" Margin="0,0,0,10"/>

            <!-- Password -->
            <TextBlock Text="Password:"/>
            <TextBox x:Name="txtPassword" Height="28" Padding="4" Margin="0,0,0,10"/>

            <!-- Telephone -->
            <TextBlock Text="Telephone:"/>
            <TextBox x:Name="txtPhone" Height="28" Padding="4" Margin="0,0,0,10"/>

            <!-- Birthday -->
            <TextBlock Text="Birthday (dd/MM/yyyy):"/>
            <TextBox x:Name="txtBirthday" Height="28" Padding="4" Margin="0,0,0,10"
                     ToolTip="Format: dd/MM/yyyy (e.g., 25/12/1990)"/>

            <!-- Status -->
            <TextBlock Text="Status:"/>
            <ComboBox x:Name="cbStatus" Height="28" Margin="0,0,0,15">
                <ComboBoxItem Content="Active" Tag="1"/>
                <ComboBoxItem Content="Inactive" Tag="0"/>
            </ComboBox>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnCreate" Content="Create" Width="90" Height="32" Margin="0,0,5,0"
                        Background="#10B981" Foreground="White" Click="btnCreate_Click" Cursor="Hand"/>
                <Button x:Name="btnUpdate" Content="Update" Width="90" Height="32" Margin="0,0,5,0"
                        Background="#3B82F6" Foreground="White" Click="btnUpdate_Click" Cursor="Hand"/>
                <Button x:Name="btnCancel" Content="Cancel" Width="90" Height="32"
                        Background="#6B7280" Foreground="White" Click="btnCancel_Click" Cursor="Hand"/>
            </StackPanel>
        </StackPanel>
</Window>
